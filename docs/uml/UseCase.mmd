usecaseDiagram
    actor "Teacher" as T
    actor "Student" as S

    package "Scrum School Platform" {
        %% Authentication
        usecase "Login" as UC_Login
        usecase "Register" as UC_Register

        %% Project Management
        usecase "Create Project" as UC_CreateProject
        usecase "Manage Project Status" as UC_ManageProject
        usecase "Assign Students" as UC_AssignStudent

        %% Sprint & Agile Management
        usecase "Create Sprint" as UC_CreateSprint
        usecase "View Sprints" as UC_ViewSprints
        usecase "Submit Daily Standup" as UC_SubmitStandup
        usecase "View Standups" as UC_ViewStandups
        usecase "Submit Retrospective" as UC_SubmitRetro
        usecase "View Retrospectives" as UC_ViewRetros

        %% Task Management
        usecase "Create Task" as UC_CreateTask
        usecase "View Tasks" as UC_ViewTasks
        usecase "Update Task Status" as UC_UpdateTaskStatus
        usecase "Submit Task Solution" as UC_SubmitSolution
        usecase "Review Solution & Give Feedback" as UC_ReviewSolution

        %% Issues & Support
        usecase "Report Task Issue" as UC_ReportIssue
        usecase "Reply to Issue" as UC_ReplyIssue

        %% Achievements
        usecase "Award Achievement" as UC_AwardAchievement
        usecase "View Achievements" as UC_ViewAchievements
    }

    %% Relationships - Teacher
    T --> UC_Login
    T --> UC_CreateProject
    T --> UC_ManageProject
    T --> UC_AssignStudent
    T --> UC_CreateSprint
    T --> UC_CreateTask
    T --> UC_ViewStandups
    T --> UC_ViewRetros
    T --> UC_ReviewSolution
    T --> UC_ReplyIssue
    T --> UC_AwardAchievement

    %% Relationships - Student
    S --> UC_Login
    S --> UC_ViewSprints
    S --> UC_ViewTasks
    S --> UC_UpdateTaskStatus
    S --> UC_SubmitSolution
    S --> UC_SubmitStandup
    S --> UC_SubmitRetro
    S --> UC_ReportIssue
    S --> UC_ReplyIssue
    S --> UC_ViewAchievements
